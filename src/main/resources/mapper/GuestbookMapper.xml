<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lchjy.mapper.GuestbookMapper">
    
    <select id="selectList" resultType="com.lchjy.entity.Guestbook">
        SELECT id, nickname, content, create_time AS createTime
        FROM ningbo_guestbook
        ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.lchjy.entity.Guestbook">
        INSERT INTO ningbo_guestbook (nickname, content)
        VALUES (#{nickname}, #{content})
    </insert>

    <delete id="deleteById">
        DELETE FROM ningbo_guestbook WHERE id = #{id}
    </delete>

</mapper>
